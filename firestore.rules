rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY TEST MODE - Allows all reads/writes for testing
    // TODO: Replace with proper security rules using Firebase Admin SDK
    match /documents/{documentId} {
      allow read, write: if true;
    }
    
    // OCR results collection - users can access their own OCR results
    match /ocr_results/{ocrId} {
      allow read, write: if true; // Temporary: allow all for testing
    }
    
    // Summaries collection - users can access their own summaries
    match /summaries/{summaryId} {
      allow read, write: if true; // Temporary: allow all for testing
    }
    
    // Checklists collection - users can access their own checklists
    match /checklists/{checklistId} {
      allow read, write: if true; // Temporary: allow all for testing
    }
    
    // Calendar events collection - users can access their own calendar events
    match /calendarEvents/{eventId} {
      allow read, write: if true; // Temporary: allow all for testing
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

